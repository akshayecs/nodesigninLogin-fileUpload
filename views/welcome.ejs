<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <!-- main bootstrap file -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


</head>
<body>
    <h3>Upload your file here</h3>


    <!-- ////////////////////////////////////// -->

    <!-- Modal -->
    <div class="modal fade" id="add" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form   action="/users/insert" enctype="multipart/form-data" class="row g-3" method="POST"  autocomplete="off">


                        <div class="col-md-12">
                            <label for="inputEmail4" class="form-label">Song Name</label>
                            <!-- <input type="text" class="form-control" id="inputEmail4"> -->
                            <input type="text" class="form-control" aria-label="First name">
                        </div>
                        <div class="col-md-12">
                            <label for="inputEmail4" class="form-label">Song Image</label>
                            <input type="text" class="form-control" aria-label="Last name">
                        </div>
                        
                        
                        <div class="form-outline mb-4">
                            <label class="form-label">Description:</label>
                            <textarea class="form-control" id="form7Example7" rows="5"></textarea>
                        </div>

                        <div>
                            <label for="inputEmail4" class="form-label">Upload Audio:</label>
                            <input type="file" class="form-control" id="inputGroupFile04"
                                aria-describedby="inputGroupFileAddon04" required="required">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" form="myform">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ////////////////////////////////// -->


    <!-- ////////////////////////// -->
    
    <div class="container">
        <h2>
            <%= title %>
        </h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add"> +Add New</button><br><br>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>songName</th>
                    <th>songImage</th>
                    <th>Description</th>
                    <th>Audio</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% audio.forEach(function(user) { %>
                    <tr>
                        <td>
                            <%= user.song_name %>
                        </td>
                        <td>
                            <%= user.song_image %>
                        </td>
                        <td>
                            <%= user.description %>
                        </td>
                        <td>
                            <%= user.file %>
                        </td>
                        
                        <td>
                            <button class="btn btn-sm btn-primary">play</button><br>
                            <button class="btn btn-sm btn-secondary">pause</button><br>
                        </td>
                    </tr>
                    <% });%>
            </tbody>
        </table>
    </div>

    <!-- ////////////////////////// -->

    <a href="/users/register"><button type="submit">Logout</button></a>
</body>
</html>